---
const {title = "producto"} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Pacifico&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">		
		<meta name="generator" content={Astro.generator} />
		<title>Cafetería Arquitecto Ventura Rodríguez - {title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;

		padding-top: 40px; /* Para el header fixed de TopMenu*/
	}
</style>
