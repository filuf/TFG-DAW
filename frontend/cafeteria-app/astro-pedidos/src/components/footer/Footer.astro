---
import styles from "./Footer.module.css";
---
<footer class={styles.footer}>
  <div class={styles.footerContent}>
    <div class={styles.footerBrand}>
      <img src="/favicon.png" alt="Logo cafetería" class={styles.logo} />
      <span class={styles.brandName}>Cafetería Ventura Rodríguez</span>
    </div>
    <nav class={styles.footerNav} aria-label="Enlaces rápidos">
      <a href="/" class={styles.footerLink}>Inicio</a>
      <a href="/cart" class={styles.footerLink}>Carrito</a>
      <a href="/orders" class={styles.footerLink}>Pedidos</a>
    </nav>
    <div class={styles.footerContact}>
      <div>
        <strong>Contacto:</strong>
        <a href="mailto:cafeteriaventurarodriguez@gmail.com">cafeteriaventurarodriguez@gmail.com</a>
      </div>
      <div>
        <strong>Dirección:</strong>
        <a href="https://www.google.com/maps/place//data=!4m2!3m1!1s0xd418558fb16b0f1:0x6a94b2b4e590a404?sa=X&ved=1t:8290&ictx=111" class={styles.footerLink}>C. Severo Ochoa, 4, 28660 Boadilla del Monte, Madrid</a>
        
      </div>
    </div>
    <div class={styles.footerLegal}>
      <a href="https://iesventura.es/index.php/component/content/article/13-centro/información-general/143-avisolegal" class={styles.footerLink}>Aviso legal</a>
      <a href="https://iesventura.es/index.php/component/content/article/13-centro/información-general/143-avisolegal?showall=&start=1" class={styles.footerLink}>Política de privacidad</a>
    </div>
    <div class={styles.footerSocial}>
      <a href="https://www.instagram.com/iesarquitectoventurarodriguez/?utm_source=ig_web_button_share_sheet" title="Instagram" class={styles.socialIcon}><i class="fa-brands fa-instagram"></i></a>
      <a href="https://x.com/IesVentura" title="X" class={styles.socialIcon}><i class="fa-brands fa-x"></i></a>
      <a href="https://iesventura.es/" title="web_instituto" class={styles.socialIcon}><i class="fas fa-globe"></i></a>
    </div>
  </div>
  <div class={styles.footerCopyright}>
    © {new Date().getFullYear()} Cafetería Ventura Rodríguez. Todos los derechos reservados.
  </div>
</footer> 