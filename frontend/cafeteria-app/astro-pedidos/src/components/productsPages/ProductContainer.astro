---
import ProductCard from './ProductCard.jsx';
const { products } = Astro.props;
---

<main class="products-list-container">
  <!-- Mapeamos los productos existentes en la base de datos y mostramos cada uno
  esto funciona como un bucle foreach (for in) -->
  {products.map((product: any) => (
    <ProductCard product={product} client:only="react" />
  ))}
</main>

<style>
.products-list-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.2rem;
  padding: 2rem 0.5rem;
  justify-items: center;
  align-items: stretch;
  width: 100%;
  max-width: 1300px;
  margin: 0 auto;
  background: var(--lemon-chiffon);
  border-radius: 18px;
  box-shadow: 0 2px 12px rgba(65, 39, 34, 0.08);
}
@media (max-width: 700px) {
  .products-list-container {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 0.7rem;
    padding: 1rem 0.2rem;
  }
}
</style>